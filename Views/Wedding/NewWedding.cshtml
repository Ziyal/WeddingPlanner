@{
    DateTime CurrentTime = DateTime.Now;
}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Add a Wedding - Wedding</title>
  </head>
  <body>
    <div class="add-container">
        <h1>Plan Your Wedding</h1>
        <hr>
        <form action="add-wedding" method="post">
            <h4 class="form-titles">Bride: </h4><input class="form-control" type="text" name="Bride">
            <h4 class="form-titles">Groom: </h4><input class="form-control" type="text" name="Groom">
            <h4 class="form-titles">Date: </h4><input class="form-control" type="date" name="Date">
            <h4 class="form-titles">Address: </h4><input class="form-control" type="text" name="Address"><br>
            <input class="btn btn-info login-btn btn-block" type="submit" value="Create"><br>
        </form>
        <div class="errors">
            @{
                if (ViewBag.Errors != null) {
                    foreach(var error in ViewBag.Errors) {
                        <p class="alert alert-warning">@error</p>
                    }
                }
            }
        </div>     
      <a href="dashboard"><button class="btn btn-default btn-s btn-block">Go Back</button></button></a>
    </div>
  </body>
</html>